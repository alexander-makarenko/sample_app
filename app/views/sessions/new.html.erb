<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <%= form_tag sessions_path do |f| %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
            
      <div class="center">
        <%= submit_tag 'Sign in', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
    <br/>
    <p class="center">New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>

